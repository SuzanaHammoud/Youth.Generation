<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecyclerViews">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="137dp"
        android:layout_height="150dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/Books_TopRecylerView1"
        android:background="#f2f2f2">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="137dp"
        android:layout_height="150dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/Books_TopRecylerView1"
        android:id="@+id/Books_TopRecylerView2"
        android:background="#f2f2f2">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="137dp"
        android:layout_height="150dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/Books_TopRecylerView2"
        android:id="@+id/Books_TopRecylerView3"
        android:background="#f2f2f2">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Books_bottomRecyclerid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Books_TopRecylerView1"
        android:layout_marginTop="48dp"
        android:background="#f2f2f2"
        android:orientation="vertical"
        android:layout_alignParentLeft="true">

    </androidx.recyclerview.widget.RecyclerView>

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/Books_searchid"
        android:layout_below="@+id/Books_TopRecylerView1">

    </SearchView>

</RelativeLayout>